          %a.nav-link{:href => "#{courses_path}", class: "#{'active font-weight-bold' if current_page?(courses_path)}"}
            .fa.fa-book &nbsp Courses
        %li.nav-item
          %a.nav-link{:href => "#{new_course_path}", class: "#{'active font-weight-bold' if current_page?(new_course_path)}"} 
            .fa.fa-plus &nbsp New Course
