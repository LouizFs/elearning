        = text_field_tag :title, params[:name], autcomplete: 'off', placeholder: "Search", class: "form-controle me-2"
        %button.btn.btn-outline-success{:type => "submit"} Search
      %ul.navbar-nav
        %li.nav-item
          = button_to destroy_user_session_path, class: "nav-button nav-link" , :method => :delete, data: {:confirm => "You sure?" } do
            .fas.fa-sign-out-alt &nbsp Logout


